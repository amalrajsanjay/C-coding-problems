class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        long long int count=0;
    while(n>0){
        if(n%2==1)
        count++;
        n=n/2;
    }

    if(count==1){
       return true; 
    }
    else{
        return false;
    }
  }
};
